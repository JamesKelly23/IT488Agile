
@{
    @model ScheduleManager.Models.Employee
    ViewData["Title"] = "Employee Details";
    
    Employee currentDetails = ViewBag.currentDetails;

}

<div>
    <a asp-action="EditorIndex" class="link-button">Back to List</a>
    <br/>

    <h1 class="text-center">Employee Information</h1>
    
</div>

@{
    if (Convert.ToInt32(ViewData["EmployeeEditGeneral"]) == currentDetails.ID)
    {
        <form asp-action="Update" asp-route-id =@currentDetails.ID asp-route-a ="1">
            <h2 class="text-center">Edit General Details</h2>
            <dl class="row">
                <dt class="col-sm-2">
                    Current First Name
                </dt>
                <dd class="col-sm-4">
                    @currentDetails.FirstName
                </dd>
                <dt class="col-sm-2">
                    New First Name
                </dt>
                <dd class="col-sm-4">
                    <input name="newFirstName" value=@currentDetails.FirstName>
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Current Last Name
                </dt>
                <dd class="col-sm-4">
                    @currentDetails.LastName
                </dd>
                <dt class="col-sm-2">
                    New Last Name
                </dt>
                <dd class="col-sm-4">
                    <input name="newLastName" value=@currentDetails.LastName>
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Current Rank
                </dt>
                <dd class="col-sm-4">
                    @currentDetails.RankID
                </dd>
                <dt class="col-sm-2">
                    New Rank
                </dt>
                <dd class="col-sm-4">
                    <input name="newRank"value=@currentDetails.RankID>
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Current Date of Birth
                </dt>
                <dd class="col-sm-4">
                    @currentDetails.DOB
                </dd>
                <dt class="col-sm-2">
                    New Date of Birth
                </dt>
                <dd class="col-sm-4">
                    <input name="newDOB" value=@currentDetails.DOB>
                </dd>
            </dl>
            <input type="submit" name="Save"><br/>
            <button asp-action="EmployeeDetails" asp-route-id=@currentDetails.ID>Cancel</button>
        </form>
    }
    else if (Convert.ToInt32(ViewData["EmployeeEditContact"]) == currentDetails.ID)
    {
        <form asp-action="Update" asp-route-id=@currentDetails.ID asp-route-a ="2">
            <h2 class="text-center">Edit Contact Details</h2><br/>
            <dl class="row">
                <dt class="col-sm-2">
                    Current Email
                </dt>
                <dd class="col-sm-4">
                    @currentDetails.Email
                </dd>
                <dt class="col-sm-2">
                    New Email
                </dt>
                <dd class="col-sm-4">
                    <input name="newEmail" value=@currentDetails.Email>
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Current Phone
                </dt>
                <dd class="col-sm-4">
                    @currentDetails.Phone
                </dd>
                <dt class="col-sm-2">
                    New Phone
                </dt>
                <dd class="col-sm-4">
                    <input name="newPhone" value=@currentDetails.Phone>
                </dd>
            </dl>
            <input type="submit"><br />
            <button asp-action="EmployeeDetails" asp-route-id=@currentDetails.ID>Cancel</button>
        </form>
    }
    else if (Convert.ToInt32(ViewData["EmployeeEditAccount"]) == currentDetails.ID)
    {
        <form asp-action="Update" asp-route-id=@currentDetails.ID asp-route-a ="3">
            <h2 class="text-center">Edit Account Credentials</h2><br />
            <dl class="row">
                <dt class="col-sm-2">
                    Current User Name
                </dt>
                <dd class="col-sm-4">
                    @currentDetails.Username
                </dd>
                <dt class="col-sm-2">
                    New User Name
                </dt>
                <dd class="col-sm-4">
                    <input name="newUserName" value=@currentDetails.Username>
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                   New Password
                </dt>
                <dd class="col-sm-4">
                    <input name="newPassword" placeholder="##############">
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Verify Password
                </dt>
                <dd class="col-sm-4">
                    <input name="verifyPassword" placeholder="##############">
                </dd>
            </dl>
            <input type="Submit"><br />
            <button asp-action="EmployeeDetails" asp-route-id=@currentDetails.ID>Cancel</button>
        </form>
    }
    else
    {
        <div class="text-center">
            <h2>General</h2>
            <br />
        </div>
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    First Name
                </dt>
                <dd class="col-sm-10">
                    @currentDetails.FirstName
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Last Name
                </dt>
                <dd class="col-sm-10">
                    @currentDetails.LastName
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Rank
                </dt>
                <dd class="col-sm-10">
                    @currentDetails.RankID
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Date of Birth
                </dt>
                <dd class="col-sm-10">
                    @currentDetails.DOB
                </dd>
            </dl>
            <div>
            <a asp-action="Edit" asp-route-id=@currentDetails.ID asp-route-a ="1" class="link-button-nofloat">Edit</a>
            </div><br />
        </div>
        <div class="text-center">
            <h2>Contact Information</h2>
        </div>
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @currentDetails.Email
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Phone
                </dt>
                <dd class="col-sm-10">
                    @currentDetails.Phone
                </dd>
            </dl>
            <div>
            <a asp-action="Edit" asp-route-id=@currentDetails.ID asp-route-a ="2" class="link-button-nofloat">Edit</a>
            </div><br />
        </div>
        <div class="text-center">
            <h2>Account Info</h2>
        </div>
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    User Name
                </dt>
                <dd class="col-sm-10">
                    @currentDetails.Username
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Password
                </dt>
                <dd class="col-sm-10">
                    ############
                </dd>
            </dl>
            <div>
            <a asp-action="Edit" asp-route-id=@currentDetails.ID asp-route-a="3" class="link-button-nofloat">Edit</a>
            </div><br/>
        </div>
        <hr/>

        if(ViewBag.CurrentUser.RankID>1)
        {
            <a class="link-button" asp-action="Delete" asp-route-id=@currentDetails.ID>Delete</a>
        }

    }
}
